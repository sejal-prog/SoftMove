<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#019267"
    tools:context=".Exercise_complete">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/breatheView"
            android:layout_width="300dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/trophy"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nice , You have done it!"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textSize="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See you tomorrow"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="24dp"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/byeView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginTop="10dp"
                app:lottie_rawRes="@raw/bye"
                tools:ignore="MissingConstraints" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/complete_nextbtn"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:textAllCaps="false"
            android:background="@drawable/backround"
            android:text="Next ->"
            android:fontFamily="@font/inter_bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>