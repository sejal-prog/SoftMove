<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Excercises_screen"
    android:background="#F3F5FF">

    <RelativeLayout
        android:id="@+id/excercise_screen_rll"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/excercises_screen_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/streching_img" />

        <TextView
            android:id="@+id/excercises_screen_excercise_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/excercises_screen_image"
            android:layout_alignTop="@+id/excercises_screen_image"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="10dp"
            android:text="Streching"
            android:textColor="#FFFFFF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/excercises_screen_excercise_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/excercises_screen_excercise_name"
            android:layout_alignTop="@+id/excercises_screen_excercise_name"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="1dp"
            android:text="loremdhfih  hskjfh  kshf hsk fh skfhskfhskfh"
            android:textColor="#868686"
            android:textSize="18dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/exercises_backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_layout"
        app:layout_constraintTop_toTopOf="@+id/excercise_screen_rll">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/excercises_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>